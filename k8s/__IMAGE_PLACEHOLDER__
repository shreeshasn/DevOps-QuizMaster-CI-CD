apiVersion: apps/v1
kind: Deployment
metadata:
  name: devops-quizmaster-deployment
  labels:
    app: devops-quizmaster
spec:
  replicas: 2
  selector:
    matchLabels:
      app: devops-quizmaster
  template:
    metadata:
      labels:
        app: devops-quizmaster
    spec:
      containers:
        - name: app
          image: __IMAGE_PLACEHOLDER__
          ports:
            - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: devops-quizmaster-svc
spec:
  selector:
    app: devops-quizmaster
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: LoadBalancer
